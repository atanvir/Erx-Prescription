<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
    </style>

    <style name="CustomTextAppearanceTab">

        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/large_text_size</item>


    </style>

    <style name="customRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/drawable_rating_selector</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">28dip</item>
    </style>

</resources>
